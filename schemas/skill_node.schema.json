{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Skill Node",
    "description": "Represents a specific form or upgrade of a skill within a skill family.",
    "type": "object",
    "required": [
        "id",
        "family_id",
        "label",
        "rarity",
        "canon",
        "source_ref"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^node:[a-z0-9_\\-.]+$",
            "description": "Unique node identifier, e.g. 'node:meditation.common'"
        },
        "family_id": {
            "type": "string",
            "pattern": "^skill:[a-z0-9_\\-]+$",
            "description": "Which skill family this node belongs to"
        },
        "label": {
            "type": "string",
            "description": "Readable label for the node, e.g. 'Meditation [Common]'"
        },
        "rarity": {
            "type": "string",
            "enum": [
                "Inferior",
                "Common",
                "Uncommon",
                "Rare",
                "Epic",
                "Legendary",
                "Unique",
                "Transcendent"
            ]
        },
        "prereqs": {
            "type": "array",
            "description": "Conditions required to unlock or upgrade to this node",
            "items": {
                "type": "object",
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "value": {}
                },
                "additionalProperties": true
            }
        },
        "param_rules": {
            "type": "array",
            "description": "Rules for how parameters behave in this node",
            "items": {
                "type": "object",
                "required": [
                    "param"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "heuristic",
                            "formula"
                        ]
                    },
                    "param": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "confidence": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ]
                    },
                    "when": {
                        "type": "object"
                    },
                    "expr": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "upgrades_to": {
            "type": "array",
            "description": "Possible upgrades from this node",
            "items": {
                "type": "object",
                "required": [
                    "node_id"
                ],
                "properties": {
                    "node_id": {
                        "type": "string"
                    },
                    "conditions": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "canon": {
            "type": "boolean",
            "description": "Marks this node as quote-backed and accepted"
        },
        "source_ref": {
            "type": "array",
            "items": {
                "$ref": "shared/source_ref.schema.json"
            },
            "description": "Quote-based evidence of this node's existence"
        }
    },
    "additionalProperties": false
}