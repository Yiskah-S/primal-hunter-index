{
	"$id": "https://primal-hunter.local/schemas/shared/provenance.schema.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Provenance Fragments",
	"$comment": "See docs/contracts/provenance_contract_v2.0.md#2-provenance-requirements",
	"description": "Reusable blocks that enforce provenance expectations across canon data.",
	"$defs": {
		"source_ref_object": {
			"$ref": "https://primal-hunter.local/schemas/shared/source_ref.schema.json"
		},
		"source_ref": {
			"description": "Accepts either a single citation object or a non-empty array of citations.",
			"oneOf": [
				{ "$ref": "#/$defs/source_ref_object" },
				{
					"type": "array",
					"items": { "$ref": "#/$defs/source_ref_object" },
					"minItems": 1,
					"uniqueItems": false
				}
			]
		},
		"source_ref_array": {
			"type": "array",
			"items": { "$ref": "#/$defs/source_ref_object" },
			"minItems": 1,
			"uniqueItems": false
		}
	}
}
