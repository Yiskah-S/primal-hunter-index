{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://primal-hunter.local/schemas/shared/param_rule.schema.json",
	"title": "Param Rule Fragment",
	"$comment": "See docs/runbooks/context_summary.md#parameters-are-fuzzy-rules-not-fixed-numbers",
	"$defs": {
		"param_rule": {
			"type": "object",
			"required": ["type", "rule"],
			"properties": {
				"type": {
					"type": "string",
					"enum": ["formula", "fuzzy"],
					"description": "Whether this rule is logic-based or qualitative"
				},
				"rule": {
					"type": "string",
					"description": "Descriptive text or a formula (e.g. '10 + (Int * 2)')"
				},
				"source_ref": {
					"$ref": "https://primal-hunter.local/schemas/shared/source_ref.schema.json"
				}
			},
			"additionalProperties": false
		}
	}
}
