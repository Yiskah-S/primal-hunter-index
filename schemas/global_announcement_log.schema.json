{
	"$id": "https://primal-hunter.local/schemas/global_announcement_log.schema.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Global Announcement Log",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"timestamp": { "type": "string", "format": "date-time" },
			"scene_id": { "type": "string", "pattern": "^\\d{2}-\\d{2}-\\d{2}$" },
			"message": { "type": "string" },
			"audience": { "type": "string" },
			"notes": { "type": "string" },
			"canon": {
				"type": "boolean",
				"description": "Whether this announcement represents a canon message."
			},
			"source_ref": {
				"$ref": "https://primal-hunter.local/schemas/shared/provenance.schema.json#/$defs/source_ref"
			},
			"index_meta": {
				"$ref": "https://primal-hunter.local/schemas/shared/index_meta.schema.json#/$defs/index_meta"
			}
		},
		"required": ["message", "canon", "source_ref", "index_meta"],
		"additionalProperties": false
	},
	"additionalProperties": false
}
