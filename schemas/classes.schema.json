{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Class Metadata Schema",
	"type": "object",
	"$defs": {
		"entry": {
			"type": "object",
			"required": [
				"type",
				"archetype",
				"focus",
				"stat_bonus_per_level",
				"description",
				"canon",
				"source_ref",
				"index_meta"
			],
			"properties": {
				"type": { "type": "string" },
				"archetype": { "type": "string" },
				"weight_class": { "type": "string" },
				"focus": {
					"type": "array",
					"items": { "type": "string" }
				},
				"weapons": {
					"type": "array",
					"items": { "type": "string" }
				},
				"stat_bonus_per_level": {
					"type": "object",
					"patternProperties": {
						".+": { "type": "number" }
					}
				},
				"grants_skills": {
					"type": "array",
					"items": { "type": "string" }
				},
				"flavor": { "$ref": "https://primal-hunter.local/schemas/shared/flavor.schema.json#/$defs/flavor" },
				"canon": {
					"type": "boolean",
					"description": "Whether this class entry asserts canon facts requiring provenance."
				},
				"source_ref": {
					"$ref": "https://primal-hunter.local/schemas/shared/provenance.schema.json#/$defs/source_ref"
				},
				"index_meta": {
					"$ref": "https://primal-hunter.local/schemas/shared/index_meta.schema.json#/$defs/index_meta"
				}
			},
			"additionalProperties": false
		}
	},
	"patternProperties": {
		".+": {
			"$ref": "#/$defs/entry"
		}
	},
	"additionalProperties": false
}
