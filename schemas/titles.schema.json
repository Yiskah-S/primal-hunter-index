{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Title Metadata Schema",
	"type": "object",
	"$defs": {
		"entry": {
			"type": "object",
			"required": ["rarity", "effects", "canon", "source_ref"],
			"properties": {
				"rarity": {
					"type": "string",
					"enum": ["Common", "Uncommon", "Rare", "Epic", "Legendary", "Unique"]
				},
				"effects": {
					"type": "object",
					"properties": {
						"stat_bonus": {
							"type": "object",
							"patternProperties": {
								".+": { "type": "number" }
							}
						},
						"skill_bonus": {
							"type": "array",
							"items": { "type": "string" }
						},
						"special_effects": {
							"type": "array",
							"items": { "type": "string" }
						}
					}
				},
				"first_mentioned_in": {
					"type": "object",
					"properties": {
						"scene_id": { "type": "string" },
						"source_file": { "type": "string" },
						"line": { "type": "integer" }
					}
				},
				"flavor": { "type": "string" },
				"canon": {
					"type": "boolean",
					"description": "Whether this title entry asserts canon facts requiring provenance."
				},
				"source_ref": {
					"$ref": "https://primal-hunter.local/schemas/shared/provenance.schema.json#/$defs/source_ref"
				}
			},
			"additionalProperties": false
		}
	},
	"patternProperties": {
		".+": {
			"$ref": "#/$defs/entry"
		}
	},
	"additionalProperties": false
}
